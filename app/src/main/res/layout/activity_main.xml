<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:context=".MainActivity" >
    android:background="#ffffff"



    <EditText
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="sendmessage"
        android:text="Send"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt"
        app:layout_constraintStart_toEndOf="@+id/txt" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="302dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints">

    </android.support.v7.widget.GridLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="302dp"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp"
        tools:ignore="MissingConstraints">


    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/east"
        android:layout_width="145dp"
        android:layout_height="78dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="104dp"
        android:layout_weight="1"
        android:background="#8c96ff"

        android:fontFamily="Times New Roman"

        android:text="east"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/south"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <Button
        android:id="@+id/north"
        android:layout_width="143dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:background="#8c96ff"

        android:fontFamily="Times New Roman"
        android:onClick="south"
        android:text="south"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/west"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/south"
        android:layout_width="137dp"
        android:layout_weight="1"
        android:layout_height="77dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="#8c96ff"

        android:onClick="west"
        android:text="west"
        android:fontFamily="Times New Roman"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt" />

    <Button
        android:id="@+id/west"
        android:layout_width="144dp"
        android:layout_weight="1"
        android:layout_height="75dp"
        android:layout_marginTop="104dp"
        android:background="#8c96ff"

        android:onClick="north"
        android:text="north"
        android:fontFamily="Times New Roman"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/south" />

</android.support.constraint.ConstraintLayout>